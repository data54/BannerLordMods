<Prefab>
  <Constants>
    <Constant Name="Buttons.Margin" Value="5" />
    <Constant Name="Buttons.Width" Value="60" />
    <Constant Name="Buttons.Height" Value="60" />


    <Constant Name="TopRightMenuHeight" Value="100" />
    <Constant Name="TopRightMenuWidth" Value="100" />


    <Constant Name="UpgradeAllTroopsButtonRightMargin" Value="80" />
  </Constants>
  <Variables>
  </Variables>
  <VisualDefinitions>
    <VisualDefinition Name="TopRightMenu" DelayOnBegin="0.2" TransitionDuration="0.4">
      <VisualState PositionYOffset="10" State="Default" />
    </VisualDefinition>
  </VisualDefinitions>
  <Window>
    <Widget Id="PartyManager" VisualDefinition="TopRightMenu"
            WidthSizePolicy="Fixed" HeightSizePolicy="Fixed"
            SuggestedWidth="180"
            SuggestedHeight="100"
            HorizontalAlignment="Right" VerticalAlignment="Top" MarginTop="5">
      <Children>
        <UpgradeAllTroopsWidget Id="UpgradeAllTroopsButton" DoNotPassEventsToChildren="true" WidthSizePolicy="Fixed"
                                HeightSizePolicy="Fixed" SuggestedWidth="!Buttons.Width"
                                SuggestedHeight="!Buttons.Height" HorizontalAlignment="Right"
                                VerticalAlignment="Center" MarginLeft="!Buttons.Margin"
                                MarginRight="!UpgradeAllTroopsButtonRightMargin"
                                MarginTop="0" Brush="PartyManager.UpgradeAll">

        </UpgradeAllTroopsWidget>
      </Children>
    </Widget>
  </Window>
</Prefab>